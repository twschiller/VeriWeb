<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:view='urn:import:com.schiller.veriasa.web.client.views'>

	<g:VerticalPanel width="100%" verticalAlignment="ALIGN_TOP" ui:field="main">
		<g:Label stylePrimaryName="subview-header" ui:field="tagline">Write Post-conditions:</g:Label>
		<g:HorizontalPanel>
			<g:cell verticalAlignment="ALIGN_MIDDLE">
				<g:HTML>Actions:</g:HTML>
			</g:cell>
			<g:cell>
				<g:VerticalPanel width="5px" />
			</g:cell>
			<g:Button ui:field="doneButton">Next Problem</g:Button>
		</g:HorizontalPanel>
		<g:VerticalPanel height="10px" />
		
		<g:cell width="100%">
			<view:ClauseWriter ui:field="writer" />
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 